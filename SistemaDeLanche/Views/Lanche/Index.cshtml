@model IEnumerable<SistemaDeLanche.BLL.Models.Lanche>

@{
    ViewData["Title"] = "Lanches cadastrados";
    string controller = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="tabelas">

    <partial name="_Confirmacoes" />

    <div class="collection with-header">
        <div class="collection-header grey darken-1">
            <div class="row">
                <div class="col s10">
                    <h1 class="white-text">Lanches Cadastrados</h1>
                </div>
                <div class="col s2">
                    <a asp-controller="Lanche" asp-action="Create" class="waves-effect waves-light btn-small btn-floating grey darken-4" data-position="right">
                        <i class="material-icons">add</i>
                    </a>
                </div>
            </div>
        </div>

        <div class="collection-item">
            <table class="striped highlight reponsive">
                <thead>
                    <tr>
                        <th>
                            <h5>Nome Lache</h5>
                        </th>
                        <th>
                            <h5>Ingredientes</h5>
                        </th>
                        <th>
                            <h5>Valor Lanche</h5>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeLanche)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ingredientes)
                            </td>
                            <td>
                                <a>R$</a>
                                @Html.DisplayFor(modelItem => item.ValorLanche)
                            </td>
                            <td>
                                <a asp-controller="Lanche" asp-action="Edit" asp-route-id="@item.LancheId" class="btn-floating btn-small blue darken-4" data-position="right">
                                    <i class="material-icons">mode_edit</i>
                                </a>

                                <a onclick="ConfirmarExclusao(@item.LancheId, '@item.NomeLanche', '@controller')" class="btn-floating btn-small red darken-4 modal-trigger" data-target="modal" data-position="right">
                                    <i class="material-icons">delete_forever</i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="_ModalExcluir" />

@section Scripts {
    <script src="~/js/ConfirmarExclusao.js"></script>
}
